@model User

@{
    ViewData["Title"] = "Подготовка к игре";
    var userName = ViewData["UserName"];
}

<h3>@ViewData["Title"]</h3>

<div class="container">
    <div class="row">

        <form asp-controller="Game" asp-action="Preparation" method="post">
            <input asp-for="UserName" value="@userName" type="hidden" />
            <div class="col-xs-12">
                <div class="form-group">
                    <label asp-for="NumberOfPsychic" class="control-label">Количество экстрасенсов</label>
                    <input asp-for="NumberOfPsychic" name="NumberOfPsychic" class="form-control"
                           placeholder="Введите количество экстрасенсов" />
                    <span asp-validation-for="NumberOfPsychic"></span>
                </div>
            </div>

            <p>Нажмите на кнопку и экстрасенсы предложат варианты ответа.</p>

            <div class="form-group">
                <input type="submit" value="Ход экстрасенсов" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>
